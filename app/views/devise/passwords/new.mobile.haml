- @mobile_page_name = "Forgot Password Reset"
%div
  = simple_form_for(resource, :as => resource_name, :url => password_path(resource_name)) do |f|
    = f.input :email, :required => false, :autofocus => true, :placeholder => 'email'
    = f.button :submit, "Send me password reset instructions"

= render :partial => "devise/shared/links"